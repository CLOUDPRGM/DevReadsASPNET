@model Norget.Models.Usuario;

@{
    ViewData["Title"] = "CadastroUsuario";
}

<body>
      
    <div class="container">
        
        <div class="formulario">
            <div class="header">
                <span>REGISTRO</span>
            </div>
            <div class="form">
                <div class="user">
                    <i class="fas fa-user"></i>
                </div>
                <h2>Seja Bem-Vindo!</h2>
                <form >
                    <label for="nome"></label>
                    <input type="nome" id="nome" name="nome" placeholder="Nome" required>

                    <label for="email"></label>
                    <input type="email" id="email" name="email" placeholder="E-mail" required>
                    
                    <label for="password"></label>
                    <div class="senha">
                        <input type="password" id="password" name="password" placeholder="Senha" required>
                        <span class="mostrar">&#128065;</span> <!-- Olho para mostrar a senha -->
                    </div>

                    <button type="submit" class="btnregistrar">Registre-se</button>
                </form>
            </div>
        </div>
        <div class="redirecionar">
            <p><span>JÁ</span> TEM CONTA? :)</p>
            <a href="login.html">Clique <span>aqui</span> para fazer o Login</a>
        </div>
    </div>
</body>